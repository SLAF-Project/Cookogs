// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int              @id @default(autoincrement())
  name      String?
  email     String           @unique
  password  String
  isadmin   Boolean          @default(false)
  createdAt DateTime         @default(now()) @map(name: "created_at")
  updatedAt DateTime         @updatedAt @map(name: "updated_at")
  recipes   Recipe[]
  likes     LikesOnRecipes[]

  @@map(name: "users")
}

model Ingredient {
  id      Int                     @id @default(autoincrement())
  name    String
  recipes IngredientsandRecipes[]
}

model Unit {
  id      Int                     @id @default(autoincrement())
  name    String
  recipes IngredientsandRecipes[]
}

model Region {
  id     Int    @id @default(autoincrement())
  name   String
  dishes Dish[]
}

model Country {
  id      Int      @id @default(autoincrement())
  name    String
  recipes Recipe[]
}

model Tag {
  id      Int      @id @default(autoincrement())
  name    String
  recipes Recipe[] @relation("_TagsAndRecipes")
}

model Type {
  id      Int      @id @default(autoincrement())
  name    String
  recipes Recipe[]
}

model Recipe {
  id              Int                     @id @default(autoincrement())
  name            String
  description     String
  steps           String?
  imageUrl        String?
  ingredientsUnit IngredientsandRecipes[]
  published       Boolean                 @default(false)
  country         Country                 @relation(fields: [countryId], references: [id], onDelete: SetNull)
  countryId       Int
  cook            User                    @relation(fields: [cookId], references: [id], onDelete: Cascade)
  cookId          Int
  dish            Dish                    @relation(fields: [dishId], references: [id], onDelete: Cascade)
  dishId          Int
  tags            Tag[]                   @relation("_TagsAndRecipes")
  type            Type                    @relation(fields: [typeId], references: [id], onDelete: SetNull)
  typeId          Int
  likes           LikesOnRecipes[]
}

model Dish {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  recipes     Recipe[]
  region      Region   @relation(fields: [regionId], references: [id], onDelete: SetNull)
  regionId    Int
}

model IngredientsandRecipes {
  quantity     Int
  recipe       Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId     Int
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
  ingredientId Int
  unit         Unit       @relation(fields: [unitId], references: [id], onDelete: Cascade)
  unitId       Int

  @@id([recipeId, ingredientId, unitId])
}

model LikesOnRecipes {
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   Int
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId Int

  @@id([userId, recipeId])
}
